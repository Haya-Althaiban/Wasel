@using Microsoft.AspNetCore.Http

@inject IHttpContextAccessor HttpContextAccessor

@{
    var user = ViewBag.CurrentUser as Wasel.Models.User;
    var unreadMessagesCount = ViewBag.UnreadMessagesCount ?? 0;
    var notifications = ViewBag.Notifications as List<Wasel.Services.NotificationViewModel> ?? new List<Wasel.Services.NotificationViewModel>();
    var notificationsCount = ViewBag.NotificationsCount ?? 0;
    var currentDashboard = HttpContextAccessor.HttpContext?.Session.GetString("current_dashboard");

    // Determine dashboard URL based on user type
    string dashboardUrl = user?.UserType switch
    {
        "admin" => Url.Action("Index", "Support"),
        "buyer" => Url.Action("Dashboard", "Seller", new { area = "Buyer" }),
        "seller" => Url.Action("Dashboard", "Seller", new { area = "Seller" }),
        "both" => currentDashboard == "buyer"
            ? Url.Action("Dashboard", "Seller", new { area = "Buyer" })
            : Url.Action("Dashboard", "Seller", new { area = "Seller" }),
        _ => Url.Action("Index", "Home")
    };

    var isBuyerMode = user?.UserType == "buyer" || (user?.UserType == "both" && currentDashboard == "buyer");
    var isSellerMode = user?.UserType == "seller" || (user?.UserType == "both" && currentDashboard == "seller");
}

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg p-0 fixed-top mb-4">
    <div class="container">
        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center gap-2" href="@dashboardUrl">
            <img src="~/logo.png" style="height: 90px;" alt="Wasel Logo">
        </a>

        <!-- Mobile toggler -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-center gap-3">

                <!-- Dashboard -->
                @if (user?.UserType != "admin")
                {
                    <li class="nav-item">
                        <a class="btn btn-light border d-flex align-items-center justify-content-center"
                           href="@dashboardUrl" title="Dashboard">
                            <i class="bi bi-speedometer2 fs-5 text-primary me-2"></i> Dashboard
                        </a>
                    </li>
                }

                @if (isBuyerMode)
                {
                    <!-- Buyer Specific Menu: Tenders Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="btn btn-light border dropdown-toggle d-flex align-items-center justify-content-center"
                           href="#" id="tendersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-megaphone fs-5 text-success me-2"></i> Tenders
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="tendersDropdown">
                            <li><a class="dropdown-item" asp-area="Buyer" asp-controller="Tender" asp-action="Create"><i class="bi bi-plus-circle me-2"></i>Create Tender</a></li>
                            <li><a class="dropdown-item" asp-area="Buyer" asp-controller="Tender" asp-action="Index"><i class="bi bi-list-ul me-2"></i>My Tenders</a></li>
                            <li><a class="dropdown-item" asp-area="Buyer" asp-controller="Bid" asp-action="Index"><i class="bi bi-inbox me-2"></i>View Bids</a></li>
                        </ul>
                    </li>

                    <!-- Contracts -->
                    <li class="nav-item">
                        <a class="btn btn-light border d-flex align-items-center justify-content-center"
                           asp-area="Buyer" asp-controller="Contract" asp-action="Index" title="Contracts">
                            <i class="bi bi-file-text fs-5 text-info me-2"></i> Contracts
                        </a>
                    </li>
                }
                else if (isSellerMode)
                {
                    <!-- Seller Specific Menu: Opportunities Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="btn btn-light border dropdown-toggle d-flex align-items-center justify-content-center"
                           href="#" id="opportunitiesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-search fs-5 text-success me-2"></i> Opportunities
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="opportunitiesDropdown">
                            <li><a class="dropdown-item" asp-area="Seller" asp-controller="Tender" asp-action="Index"><i class="bi bi-megaphone me-2"></i>Find Tenders</a></li>
                            <li><a class="dropdown-item" asp-area="Seller" asp-controller="Bid" asp-action="Index"><i class="bi bi-inbox me-2"></i>My Bids</a></li>
                        </ul>
                    </li>

                    <!-- Contracts -->
                    <li class="nav-item">
                        <a class="btn btn-light border d-flex align-items-center justify-content-center"
                           asp-area="Seller" asp-controller="Contract" asp-action="Index" title="Contracts">
                            <i class="bi bi-file-text fs-5 text-info me-2"></i> Contracts
                        </a>
                    </li>

                    <!-- Payments -->
                    <li class="nav-item">
                        <a class="btn btn-light border d-flex align-items-center justify-content-center"
                           asp-area="Seller" asp-controller="Payment" asp-action="Index" title="Payments">
                            <i class="bi bi-credit-card fs-5 text-warning me-2"></i> Payments
                        </a>
                    </li>
                }

                @* Support/Tickets Menu *@
                @if (user?.UserType == "admin")
                {
                    <!-- Customer Support Menu -->
                    <li class="nav-item">
                        <a class="btn btn-light border d-flex align-items-center justify-content-center"
                           asp-controller="Support" asp-action="Index" title="Support Tickets">
                            <i class="bi bi-headset fs-5 text-info me-2"></i> Support Desk
                        </a>
                    </li>
                }
                else
                {
                    <!-- Regular User Support Tickets -->
                    <li class="nav-item">
                        <a class="btn btn-light border d-flex align-items-center justify-content-center"
                           asp-controller="Ticket" asp-action="Index" title="Support Tickets">
                            <i class="bi bi-headset fs-5 text-secondary me-2"></i> Support
                        </a>
                    </li>
                }

                @* Messages (for all users except admin) *@
                @if (user?.UserType != "admin")
                {
                    <li class="nav-item">
                        <a class="btn btn-light border d-flex align-items-center justify-content-center position-relative"
                            asp-controller="Message" asp-action="Index" title="Messages">
                            <i class="bi bi-chat-left-text fs-5 text-info me-2"></i>
                            @if (unreadMessagesCount > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @(unreadMessagesCount > 9 ? "9+" : unreadMessagesCount.ToString())
                                </span>
                            }
                        </a>
                    </li>
                }

                <!-- Continues in Part 2 -->
                <!-- Notifications Dropdown -->
                <li class="nav-item dropdown">
                    <a class="btn btn-light border rounded-circle d-flex align-items-center justify-content-center position-relative dropdown-toggle"
                       href="#" id="notificationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                       title="Notifications" style="width:45px; height:45px;">
                        <i class="bi bi-bell fs-5 text-warning"></i>
                        @if (notificationsCount > 0)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @(notificationsCount > 9 ? "9+" : notificationsCount.ToString())
                            </span>
                        }
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationsDropdown" style="min-width: 300px;">
                        @if (notifications.Any())
                        {
                            @foreach (var notification in notifications)
                            {
                                <li>
                                    <a class="dropdown-item d-flex align-items-start py-2" href="@notification.Url">
                                        <div class="flex-shrink-0">
                                            <i class="bi @notification.Icon me-2 mt-1 text-@notification.Type"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="fw-semibold">@notification.Title</div>
                                            <small class="text-muted">@notification.Message</small>
                                            <div class="text-muted small">@notification.Time</div>
                                        </div>
                                    </a>
                                </li>
                                @if (!notifications.Last().Equals(notification))
                                {
                                    <li><hr class="dropdown-divider my-1"></li>
                                }
                            }
                        }
                        else
                        {
                            <li>
                                <a class="dropdown-item text-center text-muted py-3" href="#">
                                    <i class="bi bi-bell-slash display-6 mb-2"></i>
                                    <div>No new notifications</div>
                                </a>
                            </li>
                        }
                    </ul>
                </li>

                <!-- Profile Dropdown -->
                <li class="nav-item dropdown">
                    <a class="btn btn-light border rounded-circle d-flex align-items-center justify-content-center dropdown-toggle"
                       href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                       title="Profile" style="width:45px; height:45px;">
                        <i class="bi bi-person fs-5 text-primary"></i>
                    </a>
                    <ul style="width: 198px !important;" class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">

                        @if (user?.UserType == "admin")
                        {
                            <!-- Admin Profile -->
                            <li><span class="dropdown-item-text fw-bold">@user.UserName</span></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person-gear me-2"></i>Profile Settings</a></li>
                        }
                        else if (isBuyerMode)
                        {
                            <!-- Buyer Profile -->
                            <li><span class="dropdown-item-text fw-bold">@(ViewBag.BuyerName ?? "Buyer")</span></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-area="Buyer" asp-controller="Buyer" asp-action="Profile"><i class="bi bi-person-gear me-2"></i>Profile Settings</a></li>
                        }
                        else
                        {
                            <!-- Seller Profile -->
                            <li><span class="dropdown-item-text fw-bold">@(ViewBag.SellerName ?? "Supplier")</span></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-area="Seller" asp-controller="Seller" asp-action="Profile"><i class="bi bi-person-gear me-2"></i>Profile Settings</a></li>
                            <li><a class="dropdown-item" asp-area="Seller" asp-controller="Feedback" asp-action="Index"><i class="bi bi-chat-square-text me-2"></i>My Feedback</a></li>
                        }

                        <!-- Dashboard Selector in Profile Menu for "both" users -->
                        @if (user?.UserType == "both")
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <span class="dropdown-item-text small text-muted">Switch Dashboard:</span>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center @(currentDashboard == "buyer" ? "activeee" : "")"
                                   href="#"
                                   onclick="event.preventDefault(); document.getElementById('profile-switch-to-buyer').submit();">
                                    <i class="bi bi-building me-2 text-primary"></i>
                                    Buyer Mode
                                    @if (currentDashboard == "buyer")
                                    {
                                        <i class="bi bi-check text-white ms-auto"></i>
                                    }
                                </a>
                                <form id="profile-switch-to-buyer" asp-controller="Auth" asp-action="SwitchDashboard" method="post" class="d-none">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="dashboardType" value="buyer">
                                </form>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center @(currentDashboard == "seller" ? "activeee" : "")"
                                   href="#"
                                   onclick="event.preventDefault(); document.getElementById('profile-switch-to-seller').submit();">
                                    <i class="bi bi-shop me-2 text-success"></i>
                                    Seller Mode
                                    @if (currentDashboard == "seller")
                                    {
                                        <i class="bi bi-check text-white ms-auto"></i>
                                    }
                                </a>
                                <form id="profile-switch-to-seller" asp-controller="Auth" asp-action="SwitchDashboard" method="post" class="d-none">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="dashboardType" value="seller">
                                </form>
                            </li>
                        }

                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form method="post" asp-controller="Auth" asp-action="Logout">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </li>

            </ul>
        </div>
    </div>
</nav>