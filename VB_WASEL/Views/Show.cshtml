@model Wasel.ViewModels.TicketVMs.TicketDetailsViewModel
@{
    ViewData["Title"] = $"Ticket #TK-{Model.TicketNum}";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";

    var statusClass = Model.TicketStatus switch
    {
        "Open" => "warning",
        "In Progress" => "info",
        "Closed" => "success",
        _ => "secondary"
    };
}

<section class="dashboard-section mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="page-title">Ticket #TK-@Model.TicketNum</h1>
                        <p class="page-subtitle">@Model.TicketIssueType</p>
                    </div>
                    <a href="@Url.Action("Index", "Ticket")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Tickets
                    </a>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="content-card mb-4">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title">Ticket Details</h3>
                            <span class="status-badge status-@statusClass">@Model.TicketStatus</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <label>Ticket Number:</label>
                                    <span>#TK-@Model.TicketNum</span>
                                </div>
                                <div class="detail-item">
                                    <label>Issue Type:</label>
                                    <span>@Model.TicketIssueType</span>
                                </div>
                                <div class="detail-item">
                                    <label>Opened Date:</label>
                                    <span>@Model.TicketOpenDate?.ToString("MMMM dd, yyyy 'at' hh:mm tt")</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <label>Status:</label>
                                    <span>@Model.TicketStatus</span>
                                </div>
                                @if (Model.TicketClosedDate.HasValue)
                                {
                                    <div class="detail-item">
                                        <label>Closed Date:</label>
                                        <span>@Model.TicketClosedDate?.ToString("MMMM dd, yyyy 'at' hh:mm tt")</span>
                                    </div>
                                }
                                <div class="detail-item">
                                    <label>Support Agent:</label>
                                    <span>
                                        @if (!string.IsNullOrEmpty(Model.AssignedToName))
                                        {
                                            @Model.AssignedToName
                                            @if (!string.IsNullOrEmpty(Model.AssignedToEmail))
                                            {
                                                <text>(@Model.AssignedToEmail)</text>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not assigned yet</span>
                                        }
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="content-card">
                    <div class="card-header">
                        <h3 class="card-title">Issue Description</h3>
                    </div>
                    <div class="card-body">
                        <div class="ticket-description">
                            @Model.TicketDescription
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.ReplyMessage))
                {
                    <div class="content-card mt-4">
                        <div class="card-header">
                            <h3 class="card-title">Support Response</h3>
                        </div>
                        <div class="card-body">
                            <div class="support-response">
                                <p class="mb-3"><strong>Response from @Model.ReplyUserName on @Model.ReplyDate?.ToString("MMMM dd, yyyy 'at' hh:mm tt")</strong></p>
                                <div class="response-message">
                                    @Model.ReplyMessage
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Ticket Actions -->
                <div class="content-card mt-4">
                    <div class="card-body">
                        <div class="d-flex gap-2 justify-content-end">
                            @if (Model.CanClose)
                            {
                                <form asp-action="Close" method="POST">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="ticketNum" value="@Model.TicketNum" />
                                    <input type="hidden" name="userId" value="@Model.UserId" />
                                    <button type="submit" class="btn btn-success"
                                            onclick="return confirm('Are you sure you want to close this ticket?')">
                                        <i class="bi bi-check-circle me-2"></i>Close Ticket
                                    </button>
                                </form>
                            }

                            @if (Model.CanReopen)
                            {
                                <form asp-action="Reopen" method="POST">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="ticketNum" value="@Model.TicketNum" />
                                    <input type="hidden" name="userId" value="@Model.UserId" />
                                    <button type="submit" class="btn btn-warning"
                                            onclick="return confirm('Are you sure you want to reopen this ticket?')">
                                        <i class="bi bi-arrow-clockwise me-2"></i>Reopen Ticket
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            color: #6c757d;
            margin-bottom: 0;
        }

        .content-card {
            background: white;
            border-radius: 0.75rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: 1px solid #e9ecef;
        }

        .card-header {
            padding: 1.5rem 2rem;
            border-bottom: 1px solid #e9ecef;
            background-color: #f8f9fa;
        }

        .card-body {
            padding: 2rem;
        }

        .card-title {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 600;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #eee;
        }

            .detail-item label {
                font-weight: 600;
                color: #495057;
                min-width: 150px;
                margin-bottom: 0;
            }

            .detail-item span {
                color: #212529;
                flex: 1;
            }

        .ticket-description {
            white-space: pre-wrap;
            line-height: 1.6;
            color: #495057;
        }

        .support-response {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 0.5rem;
            border-left: 4px solid #007bff;
        }

        .response-message {
            white-space: pre-wrap;
            line-height: 1.6;
        }

        .status-badge {
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            font-weight: 500;
        }

            .status-badge.status-warning {
                background: #fff3cd;
                color: #664d03;
            }

            .status-badge.status-info {
                background: #cff4fc;
                color: #055160;
            }

            .status-badge.status-success {
                background: #d1e7dd;
                color: #0f5132;
            }
    </style>
}